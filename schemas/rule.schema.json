{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Universal Logic Library - Rule Schema",
  "type": "object",
  "required": [
    "id",
    "title",
    "status",
    "domain",
    "weight",
    "schema",
    "side_conditions",
    "conflict_with",
    "learning_trace",
    "provenance",
    "tags"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[A-Z0-9]+(\\.[A-Z0-9_]+)+\\.[0-9]{3}$"
    },
    "title": {
      "type": "string",
      "minLength": 3
    },
    "status": {
      "enum": [
        "hard",
        "soft",
        "context-dependent",
        "meta"
      ]
    },
    "domain": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "weight": {
      "oneOf": [
        {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "schema": {
      "type": "object",
      "required": [
        "conclusion"
      ],
      "properties": {
        "premises": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "conclusion": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "variables": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "type"
        ],
        "properties": {
          "type": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "side_conditions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "conflict_with": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "rule_id",
          "condition"
        ],
        "properties": {
          "rule_id": {
            "type": "string"
          },
          "condition": {
            "type": "string"
          },
          "superseded_by": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    },
    "learning_trace": {
      "type": "object",
      "required": [
        "discovered_by",
        "validated_by",
        "validation_date",
        "usage_count",
        "success_rate"
      ],
      "properties": {
        "discovered_by": {
          "type": "string"
        },
        "validated_by": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "validation_date": {
          "type": [
            "string",
            "null"
          ]
        },
        "usage_count": {
          "type": [
            "number",
            "null"
          ]
        },
        "success_rate": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "counterexamples": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "formalization": {
      "type": "object",
      "properties": {
        "lean_sketch": {
          "type": [
            "string",
            "null"
          ]
        },
        "smtlib_sketch": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": true
    },
    "provenance": {
      "type": "object",
      "required": [
        "source",
        "contributor",
        "date"
      ],
      "properties": {
        "source": {
          "type": "string"
        },
        "contributor": {
          "type": "string"
        },
        "date": {
          "type": "string"
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "applicability": {
      "type": [
        "object",
        "null"
      ]
    }
  },
  "additionalProperties": true
}
```

